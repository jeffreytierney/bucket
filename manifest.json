{
  "name": "Bucket",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Your own bucket of images",
  "background": {
    "scripts": [
      "js/vendor/rsvp.min.js",
      "js/vendor/md5.js",
      "js/lib/BUCKET.js",
      "js/lib/FileStore.js",
      "js/lib/File.js",
      "js/lib/FileMetadata.js",
      "js/lib/FileDataIntegrity.js",
      "js/background/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [ 
        "js/vendor/newT.js",
        "js/content_scripts/context_menu.js",
        "js/content_scripts/confirmation.js",
        "js/content_scripts/listeners.js"
      ],
      "css": [
        "css/content_scripts/iframe.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "html/images.html"
  ],
  "icons": {
    "16": "icon.png"
  },
  "permissions": [
    "http://*/*", 
    "https://*/*", 
    "tabs",
    "contextMenus",
    "unlimitedStorage"
  ]
}